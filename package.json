{
  "name": "mdformat",
  "version": "0.3.0",
  "description": "An end user friendly Markdown template engine",
  "author": "Uladzislau Maslakou <umaslakou@gmail.com>",
  "homepage": "https://github.com/umk/mdformat#readme",
  "license": "MIT",
  "type": "module",
  "main": "dist/cjs/index.js",
  "module": "dist/mjs/index.js",
  "types": "dist/mjs/index.d.ts",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "rimraf ./dist && run-s build:*",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:mjs": "tsc -p tsconfig.mjs.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.{ts,js}\" --write",
    "fix:lint": "eslint src --fix",
    "test": "run-s test:*",
    "test:prettier": "prettier \"src/**/*.{ts,js}\" --list-different",
    "test:lint": "eslint src",
    "test:unit": "NODE_OPTIONS=\"--experimental-vm-modules\" jest test --silent",
    "test:unit:debug": "NODE_OPTIONS=\"--experimental-vm-modules\" jest test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/umk/mdformat.git"
  },
  "bugs": {
    "url": "https://github.com/umk/mdformat/issues"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.9",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "globals": "^17.0.0",
    "typescript-eslint": "^8.53.0",
    "cross-env": "^10.1.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.12.1",
    "eslint-plugin-prettier": "^5.5.5",
    "jest": "^30.2.0",
    "jest-mock": "^30.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.8.0",
    "rimraf": "^6.1.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "exports": {
    ".": {
      "import": "./dist/mjs/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "peerDependencies": {
    "marked": ">=12.0.0"
  },
  "keywords": [
    "format",
    "formatter",
    "generator",
    "html",
    "javascript",
    "markdown",
    "marked",
    "render",
    "template",
    "typescript"
  ]
}
